.popup
    width 100vw
    height 100vh
    position fixed
    top 0
    left 0
    background-color rgba(61, 10, 110, .6)
    z-index 999
    
    flex-flow column wrap
    justify-content center
    align-items center
    
    opacity 1
    
    transition opacity .4s
    
    .hidden
        display flex
        pointer-events none
        opacity 0
        
        transition opacity .4s
    
    &__container
        position relative
        box-shadow 0 20px 50px rgba(17, 1, 35, 0.1)
        border-radius 6px
        background-color #ffffff
        padding 5vh
        
        display flex
        flex-flow column wrap
        justify-content center
        align-items center
        
        @media screen and (max-width $screen-lg)
            max-width 90vw
            
        @media screen and (max-width $screen-xs)
            padding 16px
        
        h2
            color #4e0f89
            font-family Roboto, "Helvetica", sans-serif
            font-size 50px
            font-weight 700
            line-height 56px
            font-weight 700
            margin-bottom 70px
            
            @media screen and (max-width $screen-lg)
                font-size 28px
                width 100%
                text-align center
                line-height 40px
                margin-bottom 25px
                
            @media screen and (max-width $screen-xs)
                font-size 24px
            
            span.green
                color #62c95b
                font-family "Roboto", "Helvetica", sans-serif
                font-size 50px
                font-weight 900
                
                @media screen and (max-width $screen-lg)
                    font-size 36px
                
            span.green-smaller
                color #62c95b
                font-size 30px
                font-weight 700
            
        .popup__content-holder
            display flex
            flex-flow row wrap
            justify-content space-between
            align-items flex-start
            
            @media screen and (max-width $screen-lg)
                flex-flow column wrap
                align-items center

        .image
            background-size cover
            background-position center
            background-repeat no-repeat
            
            width 294px
            height 269px
            margin-right 120px
            
            background-image url('assets/money.svg')
            
            @media screen and (max-width $screen-lg)
                margin-right 0px
                width 30vw
                height 27vw
            
        .text-box
            display flex
            flex-flow column wrap
            justify-content flex-start
            align-items flex-start
            max-width 430px
            
            @media screen and (max-width $screen-lg)
                align-items center
            
            h3
                color #4e0f89
                font-family  "Roboto", "Helvetica", sans-serif
                font-size 30px
                font-weight 700
                line-height 56px
                
                @media screen and (max-width $screen-xs)
                    font-size 20px
                
            p
                opacity 0.8
                color #4e0f89
                font-family "Roboto", "Helvetica", sans-serif
                font-size 20px
                font-weight 400
                line-height 30px
                
                @media screen and (max-width $screen-lg)
                    text-align center
                    
                @media screen and (max-width $screen-xs)
                    font-size 16px
                
            a#text-link
                display none
                opacity 0.8
                font-family "Roboto", "Helvetica", sans-serif
                font-size 20px
                font-weight 400
                line-height 30px
                color #450d7a
                text-decoration underline
                
                @media screen and (max-width $screen-xs)
                    font-size 16px
                
            a.button
                margin-top 32px
                
                @media screen and (max-width $screen-xs)
                    margin-top 16px
        
    &__close
        position absolute
        right -19px
        top -19px
        
        cursor pointer
        
        width 38px
        height 38px
        
        background-size cover
        background-position center
        background-repeat no-repeat
        background-image url('data:image/png;base64,')
        

@media screen and (max-width $screen-lg)
    div.popup div.popup__container
        max-width 90vw
        
    div.popup div.popup__container h2
        font-size 28px
        width 100%
        text-align center
        line-height 40px
        margin-bottom 25px
        
    div.popup div.popup__container h2 span.green
        font-size 36px
        
    div.popup div.popup__container div.popup__content-holder
        flex-flow column wrap
        align-items center
        
    div.popup div.popup__container div.popup__content-holder div.image
        margin-right 0px
        width 20vw
        height 18vw
        
    div.popup div.popup__container div.popup__content-holder div.text-box
        align-items center
        
    div.popup div.popup__container div.popup__content-holder div.text-box p
        text-align center
        font-size 16px
            
        
        
@media screen and (max-width $screen-xs)
    div.popup div.popup__container
        padding 16px
        
    div.popup div.popup__container h2
        font-size 24px
        
    div.popup div.popup__container h2 span.green
        font-size 30px
        
    div.popup div.popup__container div.popup__content-holder div.text-box h3
        font-size 20px
        line-height 36px
        
    div.popup div.popup__container div.popup__content-holder div.text-box p
        font-size 16px
        
    div.popup div.popup__container div.popup__content-holder div.text-box a#text-link
        font-size 16px
        
    div.popup div.popup__container div.popup__content-holder div.text-box a.button
        margin-top 16px
        
@media screen and (max-width $screen-utn)
    div.popup div.popup__container
        padding 10px
        
    div.popup div.popup__container h2
        font-size 18px
        line-height 24px
        margin-bottom 7px
        
    div.popup div.popup__container h2 span.green
        font-size 18px
        
    div.popup div.popup__container h2 span.green-smaller
        font-size 16px
        
    div.popup div.popup__container div.popup__content-holder div.text-box h3
        font-size 16px
        line-height 30px
        
    div.popup div.popup__container div.popup__content-holder div.text-box p
        font-size 14px
        
    div.popup div.popup__container div.popup__content-holder div.text-box a#text-link
        font-size 13px
        
    div.popup div.popup__container div.popup__content-holder div.text-box a.button
        margin-top 12px