.popup
    width 100vw
    height 100vh
    position fixed
    top 0
    left 0
    background-color rgba(61, 10, 110, .6)
    z-index 999
    
    flex-flow column wrap
    justify-content center
    align-items center
    
    &__container
        position relative
        box-shadow 0 20px 50px rgba(17, 1, 35, 0.1)
        border-radius 6px
        background-color #ffffff
        padding 75px 50px
        
        display flex
        flex-flow column wrap
        justify-content center
        align-items center
        
        h2
            color #4e0f89
            font-family Roboto
            font-size 50px
            font-weight 700
            line-height 56px
            font-weight 700
            margin-bottom 70px
            
            span.green
                color #62c95b
                font-family "Roboto - Black"
                font-weight 400
                font-size 50px
                font-weight 700
                
            span.green-smaller
                color #62c95b
                font-size 30px
                font-weight 700
            
        .popup__content-holder
            display flex
            flex-flow row wrap
            justify-content space-between
            align-items flex-start

        .image
            background-size cover
            background-position center
            background-repeat no-repeat
            
            width 294px
            height 269px
            margin-right 120px
            
            background-image url('assets/credits.png')
            
        .text-box
            display flex
            flex-flow column wrap
            justify-content flex-start
            align-items flex-start
            max-width 430px
            
            h3
                color #4e0f89
                font-family Roboto, sans-serif
                font-size 40px
                font-weight 700
                line-height 56px
                
            p
                opacity 0.8
                color #4e0f89
                font-family Roboto, sans-serif
                font-size 20px
                font-weight 400
                line-height 30px
                
            a#text-link
                opacity 0.8
                font-family Roboto
                font-size 20px
                font-weight 400
                line-height 30px
                color #450d7a
                text-decoration underline
                
            a.button
                margin-top 50px
        
    &__close
        position absolute
        right -19px
        top -19px
        
        cursor pointer
        
        width 38px
        height 38px
        
        background-size cover
        background-position center
        background-repeat no-repeat
        background-image url('data:image/png;base64,')
        