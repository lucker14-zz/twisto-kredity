html 
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-text-size-adjust 100%


body, html
    position relative
    min-height 100vh
    min-width 100%
    background #1f0040
    min-width 320px
    color #141117
    text-align left
    margin 0
    padding 0
    max-width 100vw
    overflow-x hidden


*
    font-family 'calibre', Roboto, Helvetica, Arial, 'sans-serif'
    box-sizing border-box

    &:focus, &:active
        outline none !important
        
    &, &:before, &:after
        box-sizing border-box
        outline 0
        -webkit-font-smoothing antialiased


img, svg
    border 0
    outline none
    max-width 100%


ul,li
    margin 0
    padding 0
    list-style-type none


h1, h2, h3, h4, h5, h6, p, a, button, input, textarea, label
    margin 0
    padding 0
    text-decoration none
    -webkit-font-smoothing antialiased
    
.absolute-background
    position absolute
    
.container
    display flex
    
    &__outer
        flex-flow row wrap
        justify-content center
        align-items center
        
        position relative
        
        height auto
        width 100vw
        
        &--why
            background-color white
        
    &__inner
        position relative
        z-index 10

        flex-flow column wrap
        justify-content space-around
        align-items center

        max-width 1260px
        width 100%
        
        min-height 500px
        
        padding 50px 0
        
        @media screen and (max-width 1260px)
            max-width 95vw
            

.hidden
    display none